@using Microsoft.AspNetCore.Identity
@using PasswordStorage.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="dropdown-menu dropdown-menu-dark p-0 bg-secondary">
@if (SignInManager.IsSignedIn(User))
{
    <li class="dropdown-item">
        <form id="logoutForm" class="form-inline" asp-controller="Account" asp-action="Logout">
            <button id="logout" type="submit" class="nav-link btn btn-link text-white p-1">Выйти</button>
        </form>
    </li>
}
else
{
    <li class="dropdown-item">
        <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="dropdown-item">
        <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
