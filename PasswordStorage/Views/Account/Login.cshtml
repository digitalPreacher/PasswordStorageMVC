@model PasswordStorage.Models.SignInModel


<div class="container">
    <div class="row col-lg-3 position-absolute top-50 start-50 translate-middle border border-5 text-center p-3">
            <h1>Вход в систему</h1>
            <hr />
            <div class="col-lg-10 mx-auto">
                <section>
                    <form asp-action="LogIn">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="LoginName" class="control-label"></label>
                            <input asp-for="LoginName" class="form-control" placeholder="Логин"/>
                            <span asp-validation-for="LoginName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" placeholder="Пароль" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                                <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                            </div>
                        </div>
                        <button type="submit" class="w-100 btn btn-primary">Войти</button>
                        <div>
                            <p>
                                <a asp-action="SignUp">Зарегистрироваться</a>
                            </p>
                            <p>
                                <a asp-action="ForgotPassword">Забыли пароль?</a>
                            </p>
                            <p>
                                <a asp-action="AboutApplication">О сайте</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}