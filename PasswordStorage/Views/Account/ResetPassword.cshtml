@model PasswordStorage.Models.ResetPasswordModel

<div class="container">
    <div class="row">
        <div class="col-lg-4 position-absolute top-50 start-50 translate-middle border border-5 rounded-3 text-center p-3">
            <h1>Изменение пароля</h1>
            <hr />
            <div class="col-lg-7 mx-auto">
                <form asp-action="ResetPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Code" />
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Введите email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Введите новый пароль" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Подтвердите новый пароль" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" value="continue" class="w-100 btn btn-primary mt-2">Изменить</button>
                        <a asp-action="Login" class="w-100 btn btn-secondary mt-2">Отменить</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}